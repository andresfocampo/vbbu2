#!/bin/bash

cd ~/
#============= Installing dependencies ================
echo ubuntu | sudo apt -y update 
sudo apt -y upgrade
sudo apt -y install subversion cmake wget net-tools nano
#======================================================

#=========== Installing kernel modules ================
sudo apt -y install linux-headers-$(uname -r)
#======================================================

#=================== Networking ======================
cd ~/vbbu1/du
source du_net_conf
#======================================================

#================== Building OAI ======================
cd ~/vbbu1/du
source du_build
#======================================================

#================= Configuring OAI ====================
cd ~/vbbu1/du
source du_conf
#======================================================
